{
  "name": "loom-js",
  "description": "NodeJS & browser client for Loom DAppChains.",
  "author": {
    "name": "Loom Network",
    "url": "https://loomx.io"
  },
  "version": "1.3.3",
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:browser": "tsc && webpack",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "yarn proto && tsc && tape dist/tests/unit_tests.js",
    "test:browser": "yarn proto && tsc && webpack --config webpack.unit.tests.config.js",
    "e2e:node": "yarn proto && tsc && tape -r dotenv/config dotenv_config_path=./.env.test dist/tests/e2e_tests.js",
    "e2e:browser": "yarn proto && tsc && webpack --config webpack.e2e.test.config.js",
    "proto": "node ./scripts/gen-proto.js",
    "prepublish": "yarn proto && yarn build && webpack"
  },
  "dependencies": {
    "crypto-browserify": "^3.12.0",
    "google-protobuf": "^3.5.0",
    "retry": "^0.12.0",
    "ripemd160": "^2.0.1",
    "rpc-websockets": "^4.1.1",
    "tweetnacl": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/runtime": "^7.0.0-beta.46",
    "@types/google-protobuf": "^3.2.7",
    "@types/node": "^10.0.3",
    "@types/retry": "^0.10.2",
    "@types/tape": "^4.2.32",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.0-beta.2",
    "dotenv": "^5.0.1",
    "dotenv-webpack": "^1.5.5",
    "prettier": "1.12.1",
    "shelljs": "^0.8.2",
    "tape": "4.9",
    "ts-protoc-gen": "^0.6.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-tape-run": "^0.0.7"
  },
  "browserslist": "last 2 versions"
}
