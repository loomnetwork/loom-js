{
  "name": "loom",
  "description": "NodeJS & browser client for Loom DAppChains.",
  "author": {
    "name": "Loom Network",
    "url": "https://loomx.io"
  },
  "version": "1.0.0",
  "license": "SEE LICENSE IN License.md",
  "main": "dist/index.js",
  "browser": "dist/loom.umd.js",
  "scripts": {
    "build": "tsc",
    "build:browser": "tsc && webpack",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "yarn test:node && yarn test:browser",
    "test:node": "yarn proto && tsc && tape dist/tests/*.js",
    "test:node:win": "yarn proto:win && tsc && tape dist/tests/*.js",
    "test:browser": "yarn proto && tsc && webpack --config webpack.test.config.js",
    "test:browser:win": "yarn proto:win && tsc && webpack --config webpack.test.config.js",
    "proto": "cd src && protoc --plugin=\"protoc-gen-ts=../node_modules/.bin/protoc-gen-ts\" --js_out=\"import_style=commonjs,binary:../dist/\" --ts_out=\".\" ./proto/loom.proto ./tests/tests.proto",
    "proto:win": "cd src && protoc --plugin=\"protoc-gen-ts=..\\node_modules\\.bin\\protoc-gen-ts.cmd\" --js_out=\"import_style=commonjs,binary:..\\dist/\" --ts_out=\".\" ./proto/loom.proto ./tests/tests.proto"
  },
  "dependencies": {
    "crypto-browserify": "^3.12.0",
    "google-protobuf": "^3.5.0",
    "ripemd160": "^2.0.1",
    "rpc-websockets": "^3.6.1",
    "tweetnacl": "^1.0.0",
    "wretch": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/runtime": "^7.0.0-beta.46",
    "@types/google-protobuf": "^3.2.7",
    "@types/node": "^10.0.3",
    "@types/tape": "^4.2.32",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.0-beta.2",
    "prettier": "1.12.1",
    "tape": "^4.8.0",
    "ts-protoc-gen": "^0.6.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-tape-run": "^0.0.7"
  },
  "files": [
    "dist"
  ],
  "browserslist": "last 2 versions"
}
